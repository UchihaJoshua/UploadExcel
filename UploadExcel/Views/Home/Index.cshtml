@{
    ViewData["Title"] = "Main Menu";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Sidebar Styles */
        .sidebar {
            background-color: #e9f7ef; /* Light green background */
            padding: 1rem;
            border-right: 1px solid #d0f3d7; /* Light green border for definition */
            min-height: 100vh;
        }

            .sidebar h5 {
                font-size: 1.25rem;
                font-weight: 600;
                margin-bottom: 1rem;
                color: #388e3c; /* Dark green text */
            }

        /* Accordion Styles */
        .accordion-button {
            background-color: #fff;
            border: 1px solid #c8e6c9; /* Light green border */
            padding: 0.5rem 1rem;
            font-size: 1rem;
            color: #388e3c;
        }

            .accordion-button:not(.collapsed) {
                background-color: #c8e6c9; /* Light green background on expanded */
                border-color: #80e27e; /* Slightly darker green border */
            }

            .accordion-button:hover {
                background-color: #f1f8e9;
                border-color: #80e27e;
            }

        .accordion-body {
            background-color: #f1f8e9; /* Very light green background */
            padding: 1rem;
        }

        /* Button Styles */
        .btn-primary {
            background-color: #388e3c; /* Green button */
            border: none;
            padding: 0.5rem 1rem;
            font-size: 1rem;
        }

            .btn-primary:hover {
                background-color: #2e7d32; /* Darker green on hover */
            }

        /* Hover Section Styles */
        .hover-section {
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
            cursor: pointer;
            padding: 0.75rem 1rem;
            margin: 0.5rem 0;
            border: 1px solid #c8e6c9;
            border-radius: 5px;
        }

            .hover-section:hover {
                background-color: #c8e6c9; /* Green hover effect */
                box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
            }

        /* Hide sections initially */
        .d-none {
            display: none;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row min-vh-100">
            <!-- Sidebar -->
            <div class="col-md-3 sidebar shadow-sm">
                <h5>Main Menu</h5>

                <!-- Accordion -->
                <div class="accordion" id="sidebarAccordion">
                    <div class="accordion-item border-0">
                        <h2 class="accordion-header" id="searchHeading">
                            <button id="toggleSearchBtn" class="accordion-button collapsed" type="button">
                                🔍 Find
                            </button>
                        </h2>
                        <div id="collapseSearch" class="accordion-collapse collapse" aria-labelledby="searchHeading" data-bs-parent="#sidebarAccordion">
                            <div class="accordion-body pt-2">
                                <form id="searchForm" onsubmit="showBuyerButton(event)">
                                    <div class="mb-3">
                                        <label for="searchBy" class="form-label">Search by</label>
                                        <select id="searchBy" class="form-select" onchange="toggleSearchInput(this.value)">
                                            <option value="">-- Select --</option>
                                            <option value="bp_number">BP Number</option>
                                            <option value="sales_contract_number">Contract Number</option>
                                        </select>
                                    </div>

                                    <div class="mb-3 d-none" id="searchInputContainer">
                                        <input type="text" name="SearchTerm" class="form-control" id="searchInput" placeholder="Enter value" required />
                                    </div>

                                    <div class="mb-3 d-none" id="searchButtonContainer">
                                        <button class="btn btn-primary w-100" type="submit">Search</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <hr class="my-4" />

                <!-- Modern Results Section -->
                <div id="buyerButtonContainer" class="d-none">
                    <h6 class="text-muted text-uppercase mb-3">Results</h6>
                    <div class="d-flex flex-column gap-3">
                        <!-- Seller Section -->
                        <div onclick="loadSellerDetails()" role="button" class="hover-section">
                            <strong>Seller</strong>
                        </div>

                        <!-- Buyer Section -->
                        <div onclick="loadBuyerDetails()" role="button" class="hover-section">
                            <strong>Buyer</strong>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9 p-4">
                <div id="resultContainer">
                    <!-- Search results or seller list will be rendered here -->
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        <script>
            let buyerHtml = '';
            let sellerHtml = '';

            document.addEventListener("DOMContentLoaded", function () {
                const toggleBtn = document.getElementById("toggleSearchBtn");
                const collapseEl = document.getElementById("collapseSearch");
                const bsCollapse = new bootstrap.Collapse(collapseEl, { toggle: false });

                toggleBtn.addEventListener("click", function () {
                    if (collapseEl.classList.contains("show")) {
                        bsCollapse.hide();
                        toggleBtn.classList.add("collapsed");
                    } else {
                        bsCollapse.show();
                        toggleBtn.classList.remove("collapsed");
                    }
                });
            });

            function toggleSearchInput(value) {
                const inputContainer = document.getElementById('searchInputContainer');
                const buttonContainer = document.getElementById('searchButtonContainer');
                const searchInput = document.getElementById('searchInput');

                if (value) {
                    inputContainer.classList.remove('d-none');
                    buttonContainer.classList.remove('d-none');
                    searchInput.placeholder = `Enter ${value === "bp_number" ? "BP Number" : "Contract Number"}`;
                } else {
                    inputContainer.classList.add('d-none');
                    buttonContainer.classList.add('d-none');
                    searchInput.value = '';
                }
            }

            function showBuyerButton(event) {
                event.preventDefault();

                const searchBy = document.getElementById('searchBy').value;
                const searchTerm = document.getElementById('searchInput').value.trim();

                if (!searchBy || !searchTerm) {
                    alert("Please select a filter and enter a value.");
                    return;
                }

                document.getElementById('resultContainer').innerHTML = '';

                fetch(`/BPDetails/View?SearchBy=${encodeURIComponent(searchBy)}&SearchTerm=${encodeURIComponent(searchTerm)}`, {
                    method: 'GET',
                    headers: { 'X-Requested-With': 'XMLHttpRequest' }
                })
                .then(response => {
                    if (!response.ok) throw new Error("No results found.");
                    return response.text();
                })
                .then(html => {
                    document.getElementById('resultContainer').innerHTML = html;
                    buyerHtml = html;

                    document.getElementById('buyerButtonContainer').classList.remove('d-none');

                    if (searchBy === "bp_number" || searchBy === "sales_contract_number") {
                        fetch(`/SellerDetails/View?SearchBy=${encodeURIComponent(searchBy)}&SearchTerm=${encodeURIComponent(searchTerm)}`, {
                            method: 'GET',
                            headers: { 'X-Requested-With': 'XMLHttpRequest' }
                        })
                        .then(response => {
                            if (!response.ok) throw new Error("No seller data found.");
                            return response.text();
                        })
                        .then(html => {
                            sellerHtml = html;
                        });
                    }
                })
                .catch(error => {
                    document.getElementById('resultContainer').innerHTML = `
                        <div class="alert alert-warning">No results found for the selected search type.</div>`;
                    document.getElementById('buyerButtonContainer').classList.add('d-none');
                });
            }

            function loadBuyerDetails() {
                if (buyerHtml) {
                    document.getElementById('resultContainer').innerHTML = buyerHtml;
                } else {
                    document.getElementById('resultContainer').innerHTML = `
                        <div class="alert alert-info">Please search for a buyer first.</div>`;
                }
            }

            function loadSellerDetails() {
                if (sellerHtml) {
                    document.getElementById('resultContainer').innerHTML = sellerHtml;
                } else {
                    document.getElementById('resultContainer').innerHTML = `
                        <div class="alert alert-info">Please search using a BP Number to view sellers.</div>`;
                }
            }
        </script>
    }
</body>
</html>
