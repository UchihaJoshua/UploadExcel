@model UploadExcel.Models.BussinessPartners

@{
    ViewData["Title"] = "Buyer Details";
    var buyerClass = ViewData["BuyerTypeClass"] as string ?? "buyer-item";
}


<style>
    .details-form {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .form-group {
        display: flex;
        flex-direction: column;
    }

    label {
        font-weight: bold;
        margin-bottom: 5px;
    }

    input[readonly] {
        background-color: #f9f9f9;
        border: 1px solid #ccc;
        padding: 8px;
        border-radius: 4px;
    }

    .details-section {
        margin-bottom: 50px;
    }

    .details-actions {
        text-align: center;
        margin-top: 40px;
    }

    .btn + .btn {
        margin-left: 15px;
    }

    .section-title {
        text-align: left;
        margin: 30px 0 15px;
        font-size: 1.4rem;
        font-weight: bold;
        border-bottom: 2px solid #ccc;
        padding-bottom: 5px;
    }
</style>

<!-- Section: Basic Information -->
<div class="@buyerClass">
    <div class="section-title">Basic Information</div>
    <div class="details-form">
        <div class="form-group">
            <label>Full Name</label>
            <input type="text" readonly value="@Model.fullname" />
        </div>
        <div class="form-group">
            <label>Gender</label>
            <input type="text" readonly value="@Model.gender" />
        </div>
        <div class="form-group">
            <label>Civil Status</label>
            <input type="text" readonly value="@Model.civil_status" />
        </div>
        <div class="form-group">
            <label>Birthdate</label>
            <input type="text" readonly value="@Model.birthdate" />
        </div>
        <div class="form-group">
            <label>Age</label>
            <input type="text" readonly value="@Model.age" />
        </div>
        <div class="form-group">
            <label>Age Category</label>
            <input type="text" readonly value="@Model.age_category" />
        </div>
        <div class="form-group">
            <label>Contact Number</label>
            <input type="text" readonly value="@Model.contact_number" />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="text" readonly value="@Model.Email" />
        </div>
    </div>
</div>

<!-- Section: Employment & Citizenship -->
<div class="details-section">
    <div class="section-title">Employment & Citizenship</div>
    <div class="details-form">
        <div class="form-group">
            <label>Job Title</label>
            <input type="text" readonly value="@Model.job_title" />
        </div>
        <div class="form-group">
            <label>Employment Category</label>
            <input type="text" readonly value="@Model.employment_category" />
        </div>
        <div class="form-group">
            <label>Company Name</label>
            <input type="text" readonly value="@Model.company_name" />
        </div>
        <div class="form-group">
            <label>Industry Type</label>
            <input type="text" readonly value="@Model.industry_type" />
        </div>
        <div class="form-group">
            <label>Employment Country</label>
            <input type="text" readonly value="@Model.employment_country" />
        </div>
        <div class="form-group">
            <label>Citizenship</label>
            <input type="text" readonly value="@Model.citizenship" />
        </div>
        <div class="form-group">
            <label>Nationality</label>
            <input type="text" readonly value="@Model.nationality" />
        </div>
    </div>
</div>

<!-- Section: Buyer Info & Income -->
<div class="details-section">
    <div class="section-title">Buyer Info & Income</div>
    <div class="details-form">
        <div class="form-group">
            <label>Client Base</label>
            <input type="text" readonly value="@Model.client_base" />
        </div>
        <div class="form-group">
            <label>Reason for Purchase</label>
            <input type="text" readonly value="@Model.reason_for_purchase" />
        </div>
        <div class="form-group">
            <label>Demographic by Market</label>
            <input type="text" readonly value="@Model.demographic_by_market" />
        </div>
        <div class="form-group">
            <label>Income Declared (CB)</label>
            <input type="text" readonly value="@Model.income_declared_cb" />
        </div>
        <div class="form-group">
            <label>Income Declared (PB)</label>
            <input type="text" readonly value="@Model.income_declared_pb" />
        </div>
        <div class="form-group">
            <label>Total Income</label>
            <input type="text" readonly value="@Model.total_income" />
        </div>
    </div>
</div>

<!-- Section: Housing & Dependents -->
<div class="details-section">
    <div class="section-title">Housing & Dependents</div>
    <div class="details-form">
        <div class="form-group">
            <label>Number of Homes in PH</label>
            <input type="text" readonly value="@Model.number_of_homes_in_ph" />
        </div>
        <div class="form-group">
            <label>With Other CPGI Units</label>
            <input type="text" readonly value="@Model.with_other_cpgi_units" />
        </div>
        <div class="form-group">
            <label>CPGI Unit Number</label>
            <input type="text" readonly value="@Model.cpgi_unit_no" />
        </div>
        <div class="form-group">
            <label>With Dependents</label>
            <input type="text" readonly value="@Model.with_dependents" />
        </div>
        <div class="form-group">
            <label>No. of Dependents</label>
            <input type="text" readonly value="@Model.no_of_dependents" />
        </div>
    </div>
</div>
