<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UploadExcel</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UploadExcel.styles.css" asp-append-version="true" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        .content-wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100%;
            margin-top: 0;
        }

        main {
            flex-grow: 1;
        }

        /* Add custom style to ensure the header aligns to the left */
        .navbar {
            justify-content: flex-start;
        }

        .navbar-nav {
            display: flex;
            flex-direction: row;
            justify-content: flex-start;
        }

        .navbar-collapse {
            justify-content: flex-start;
        }

        .navbar-toggler {
            margin-left: auto; /* Ensures the toggle button stays positioned correctly */
        }
    </style>
</head>
<body>
    @* Only render the header if the current controller is "SellerDetails" *@
    @if (ViewData["ControllerName"] != null && ViewData["ControllerName"].ToString() == "SellerDetailsController")
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: #077A7D;">
                <div class="container-fluid justify-content-end">
                    <a class="navbar-brand ms-auto text-white" asp-area="" asp-controller="Home" asp-action="Index">UploadExcel</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="BusinessPartners" asp-action="Index">BP</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="UploadExcel">Upload Excel File</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

    }

    <!-- Content Wrapper: Ensures it takes up the full height of the viewport -->
    <div class="content-wrapper">
        <div class="container-fluid p-0">
            <main role="main" class="pb-3">
                @RenderBody()  <!-- The content of the page goes here -->
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
